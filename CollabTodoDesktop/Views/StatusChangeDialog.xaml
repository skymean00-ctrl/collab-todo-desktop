<Window x:Class="CollabTodoDesktop.Views.StatusChangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="상태 변경" Height="240" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="변경할 상태를 선택하세요:"
                   FontSize="13" Margin="0,0,0,12"/>

        <ListBox Grid.Row="1" x:Name="StatusListBox"
                 BorderThickness="1" BorderBrush="#DEE2E6"
                 Padding="4">
            <ListBoxItem Content="대기 (pending)"    Tag="pending"/>
            <ListBoxItem Content="진행 중 (in_progress)" Tag="in_progress"/>
            <ListBoxItem Content="검토 (review)"     Tag="review"/>
            <ListBoxItem Content="보류 (on_hold)"    Tag="on_hold"/>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="취소" Width="70" Margin="0,0,8,0"
                    IsCancel="True" Click="OnCancel_Click"/>
            <Button Content="변경" Width="70"
                    IsDefault="True" Click="OnConfirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
