<UserControl x:Class="CollabTodoDesktop.Views.TaskListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1" Padding="12,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="내 작업 목록" FontWeight="Bold" FontSize="14"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TaskCountText}" Margin="8,0,0,0"
                           Foreground="Gray" VerticalAlignment="Center" FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Task 목록 -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Tasks}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  BorderThickness="0"
                  RowHeight="36"
                  ColumnHeaderHeight="32"
                  CanUserResizeRows="False"
                  CanUserSortColumns="False"
                  AlternatingRowBackground="#FAFAFA"
                  SelectedItem="{Binding SelectedTask, Mode=TwoWay}">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F1F3F5"/>
                    <Setter Property="Foreground" Value="#495057"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Padding" Value="8,0"/>
                    <Setter Property="BorderBrush" Value="#DEE2E6"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <!-- 상태 -->
                <DataGridTemplateColumn Header="상태" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource StatusBadge}"
                                    Background="{Binding StatusColor}">
                                <TextBlock Text="{Binding StatusText}"
                                           Foreground="White" FontSize="11"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 제목 -->
                <DataGridTextColumn Header="제목" Binding="{Binding Title}"
                                    Width="*" MinWidth="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="4,0"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 기한 -->
                <DataGridTemplateColumn Header="기한" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DueDateText}"
                                       Foreground="{Binding DueDateColor}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontSize="12"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 하단 액션 바 -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#DEE2E6"
                BorderThickness="0,1,0,0" Padding="8,6">
            <StackPanel Orientation="Horizontal">
                <Button Content="상태 변경" Click="OnChangeStatus_Click"
                        IsEnabled="{Binding HasSelectedTask}"
                        Padding="10,4" Margin="0,0,6,0"/>
                <Button Content="완료 처리" Click="OnCompleteTask_Click"
                        IsEnabled="{Binding HasSelectedTask}"
                        Padding="10,4"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
